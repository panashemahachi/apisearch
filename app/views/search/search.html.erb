<h1>Libraries</h1>

 <a href="#search">Click here</a>
 <div id="search">
<%= form_for root_path, method: :get do |f| %>
  <p>
    <%= f.label "Search for" %>
    <%= text_field_tag :q, params[:q], :placeholder => "What kind of library are you looking for?" %>

    <%= f.label "Plaform"  %>
    <%= collection_select(:library, :platform_id, Platform.all, :id, :platform, {}, {
      :multiple => false, :selected => "All"}) %>
  <%= submit_tag "Go", name: nil, :class => "btn btn-primary" %>
  </p>
<% end %>
</div>

<%= link_to "Add Library", new_library_path %>
 
<ul>
  <% @libraries.each do |library| %>
    <li>
      <h3>
        <%= link_to library.try(:highlight).try(:title) ? library.highlight.title[0].html_safe : library.name,
          controller: "libraries",
          action: "show",
          id: library._id%>
      </h3>
      <% if library.try(:highlight).try(:text) %>
        <% library.highlight.text.each do |snippet| %>
          <p><%= snippet.html_safe %>...</p>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>